{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" class="row" method="post" >
    {% if form._token %}
        <input type="hidden" name="fos_user_change_password_form[_token]" value="{{ form._token.vars.value }}" />
    {% endif %}
    <div class="col-sm-6">
        <div class="form-group">
            <label for="fos_user_change_password_form_current_password" class="required">Current password</label>
            <input type="password" class="form-control" id="fos_user_change_password_form_current_password" name="fos_user_change_password_form[current_password]" required="required">
        </div>

        <div class="form-group">
            <label for="fos_user_change_password_form_plainPassword_first" class="required">New password</label>
            <input type="password" class="form-control" id="fos_user_change_password_form_plainPassword_first" name="fos_user_change_password_form[plainPassword][first]" required="required">
        </div>

        <div class="form-group">
            <label for="fos_user_change_password_form_plainPassword_second" class="required">Repeat new password</label>
            <input type="password" class="form-control" id="fos_user_change_password_form_plainPassword_second" name="fos_user_change_password_form[plainPassword][second]" required="required">
        </div>


        <div class="form-group">
            <input type="submit" class="btn btn-success btn-lg" value="{{ 'change_password.submit'|trans }}">
        </div>
    </div>
</form>