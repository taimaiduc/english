{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-xs-12">
        <h3>Login</h3>

        <form action="{{ path("fos_user_security_check") }}" class="fos_user_security_login" method="post">
            <div class="js-modal-form-error">
                {% for flashMessage in app.session.flashbag.get('error') %}
                    <div class="alert alert-danger">{{ flashMessage }}</div>
                {% endfor %}
            </div>

            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <div class="form-group">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>
            </div>

            <div class="form-group">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" class="form-control"/>
            </div>

            <div class="form-group">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-block btn-lg btn-success"/>
                </div>
                <div class="col-sm-6">
                    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-lg btn-block btn-link" id="js-btn-show-register-form">Register</a>
                </div>
            </div>
        </form>
    </div>
</div>