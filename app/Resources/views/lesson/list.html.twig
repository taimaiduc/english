{% extends 'layout.html.twig' %}

{% block content %}
    {% if app.user %}
        <h3>Bài đã lưu</h3>
        {% for lesson in user.getDoneLessons %}
        {% endfor %}

        <h3>Bài đã hoàn thành</h3>
        {% for lesson in user.getSavedLessons %}
        {% endfor %}
    {% endif %}

    {% for category in categories %}

        <h3>{{ category.name }}</h3>

        {% for lesson in category.lessons %}
            <a href="{{ path('lessons_show', {'categorySlug': category.slug ,'position': lesson.position}) }}" title="{{ lesson.name }}">
                {{ lesson.position }}
            </a>
        {% endfor %}

    {% endfor %}
{% endblock %}