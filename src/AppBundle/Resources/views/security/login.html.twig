{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
<div class="row">
    <div class="col-sm-6">
        <h3>{{ 'form.login'|trans }}</h3>
        {{ form(form) }}
        <p><a href="{{ path('fos_user_resetting_request') }}">{{ 'form.forget_password'|trans }}</a></p>
        <p><a href="{{ path('user_register') }}">{{ 'authentication.havent_had_an_account'|trans }}</a></p>
    </div>
    <div class="col-sm-6">
        <div class="fb-login-button" data-max-rows="1" data-size="large" data-button-type="continue_with" data-show-faces="false" data-auto-logout-link="false" data-use-continue-as="false"></div>
    </div>
</div>
{% endblock %}