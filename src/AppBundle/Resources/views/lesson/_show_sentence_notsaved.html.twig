<div class="js-sentence" data-id="{{ sentence.id }}">
    {% include '@App/lesson/_show_sentence_audio.html.twig' %}
    <div class="input-answer-wrapper">
        <input class="form-control js-input"
               placeholder="{{ sentence.position ~ '.' }}"
               tabindex="{{ sentence.position }}"
               value="{{ dev_env ? sentence.content : '' }}">
        <p class="text-left result js-result"></p>
        <p class="text-left answer hidden js-answer"
           data-json-answer="{{ sentence.jsonContent|json_encode }}">{{ sentence.content }}</p>
    </div>
    <button class="btn btn-default js-check-answer-btn" type="button">
        <i class="glyphicon glyphicon-send"></i>
    </button>
</div>
